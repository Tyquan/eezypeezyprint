div(id="orderForm")
  form(id="designForm")
    h3(class="text-center") Create a Custom Shirt Order
    hr
    label(id="clientName") Full Name 
      small required
    input(id="fullName" type="text" name="fullName" class="form-control" required)
    br
    label(id="clientEmail") Email Address 
      small required
    input(id="email" type="email" name="email" class="form-control" required)
    br
    label(id="clientNumber") Phone Number 
      small required
    input(id="phoneNumber" type="text" name="phoneNumber" class="form-control" required)
    br
    div(class="row")
      div(class="col-md-12")
        label(id="myShirtColor") Shirt Color
        select(id="shirtColor" name="shirtColor" class="form-control")
          option(value="White") White
          option(value="Black") Black
          option(value="Royal Blue") Royal Blue
          option(value="Light Pink") Light Pink (Todler Only)
          option(value="Heliconia Pink") Heliconia Pink (Adult/Youth Only)
          option(value="Safety Pink") Safety Pink (Adult/Youth Only)
          option(value="Daisy Yellow") Daisy Yellow (Adult/Youth Only)
          option(value="Irish Green") Irish Green (Adult/Youth Only)
          option(value="Lime Green") Lime Green (Adult/Youth Only)
          option(value="Safety Green") Safety Green (Adult/Youth Only)
          option(value="Purple") Purple (Adult/Youth Only)
          option(value="Safety Orange") Safety Orange (Adult/Youth Only)
          option(value="Sapphire") Sapphire (Adult/Youth Only)
          option(value="Navy Blue") Navy Blue (Adult Only)
          option(value="Sport Grey") Sport Grey (Adult/Youth Only)
          option(value="Sunset") Sunset (Adult Only)
          option(value="Berry") Berry (Adult Only)
          option(value="Cherry Red") Cherry Red (Adult Only)
          option(value="Heather Military Green") Heather Military Green (Adult Only)
          option(value="Heather Purple") Heather Purple (Adult Only)
          option(value="Heather Red") Heather Red (Adult Only)
          option(value="Heather Sapphire") Heather Sapphire (Adult Only)
          option(value="Navy Heather") Heather Navy Blue (Adult Only)
    br
    div(class="row")
      div(class="col-sm-6")
        h4 Front Side Of Shirt
        label(id="myFrontTopText") Top Text
        input(id="designFrontTopText" type="text" name="designFrontTopText" class="form-control")
        label(id="myMidText") Mid Text
        input(id="designFrontMidText" type="text" name="designFrontMidText" class="form-control")
        label(id="myBottomText") Bottom Text
        input(id="designFrontBottomText" type="text" name="designFrontBottomText" class="form-control")
      div(class="col-sm-6")
        h4 Back Side Of Shirt
        label(id="myBackTopText") Top Text
        input(id="designBackTopText" type="text" name="designBackTopText" class="form-control")
        label(id="myBackBottomText") Bottom Text
        input(id="designBackBottomText" type="text" name="designBackBottomText" class="form-control")
    br
    div(class="row")
      div(class="col-sm-6")
        label(id="myFrontUpload") Front File Upload
        input(id="designFrontUpload" type="file" name="designFrontUpload" class="form-control")
      div(class="col-sm-6")
        label(id="myBackUpload") Back File Upload
        input(id="designBackUpload" type="file" name="designBackUpload" class="form-control")
    br
    h4(class="text-center") Shirt Sizes and Quantities
    br
    div(class="row")
      div(class="col-sm-12")
        h5 Youth
        div(class="row")
          div(class="col-sm-3")
            label(id="myYouthS") YS
            input(id="youthS" type="number" name="youthS" class="form-control")
          div(class="col-sm-3")
            label(id="myYouthM") YM
            input(id="youthM" type="number" name="youthM" class="form-control")
          div(class="col-sm-3")
            label(id="myYouthL") YL
            input(id="youthL" type="number" name="youthL" class="form-control")
          div(class="col-sm-3")
            label(id="myYouthXL") YXL
            input(id="youthXL" type="number" name="youthXL" class="form-control")
    br
    div(class="row")
      div(class="col-sm-12")
        h5 Adult
        div(class="row")
          div(class="col-sm-3")
            label(id="mySmall") Small
            input(id="small" type="number" name="small" class="form-control")
          div(class="col-sm-3")
            label(id="myMedium") Med
            input(id="medium" type="number" name="medium" class="form-control")
          div(class="col-sm-3")
            label(id="myLarge") Large
            input(id="large" type="number" name="large" class="form-control")
          div(class="col-sm-3")
            label(id="myXL") XL
            input(id="xl" type="number" name="xl" class="form-control")
    br
    label(id="myNote") Add a note
    textarea(id="designNotes" type="text" name="designNotes" class="form-control")
    br
    button( id="getEstimate" class="btn btn-primary") Get Estimate Price
    br
    input(id="designSubmit" type="submit" name="designUpload" class="btn btn-primary")